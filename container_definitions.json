[
  {
    "name": "atproto_pds",
    "image": "${image}",
    "portMappings": [
      {
        "containerPort": 2583,
        "hostPort": 2583
      }
    ],
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-region": "${region}",
        "awslogs-stream-prefix": "atproto_pds",
        "awslogs-group": "${cloudwatch_group_name}"
      }
    },
    "environment": [
      {
        "name": "DB_DATABASE",
        "value": "${database_name}"
      },
      {
        "name": "DB_USERNAME",
        "value": "${database_username}"
      }
    ],
    "secrets": [
      {
        "name": "DB_PASSWORD",
        "valueFrom": "${database_password_arn}"
      },
      {
        "name": "DB_HOST",
        "valueFrom": "${database_host_arn}"
      }
    ]
  }
]
