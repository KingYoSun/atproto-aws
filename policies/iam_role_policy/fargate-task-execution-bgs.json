{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Resource": ["${ssm_arn}/*"],
      "Action": ["ssm:GetParameters"]
    },
    {
      "Effect": "Allow",
      "Resource": ["${ssm_admin_pass_arn}", "${ssm_melisearch_apikey_arn}"],
      "Action": ["secretsmanager:GetSecretValue", "kms:Decrypt"]
    },
    {
      "Effect": "Allow",
      "Resource": "*",
      "Action": ["logs:CreateLogStream", "logs:PutLogEvents"]
    }
  ]
}
