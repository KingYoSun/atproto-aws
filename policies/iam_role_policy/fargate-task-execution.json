{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Resource": ["${ssm_arn}", "${secretmanager_arn}"],
      "Action": ["ssm:GetParameters", "secretmanager:GetSecretValue"]
    },
    {
      "Effect": "Allow",
      "Resource": "*",
      "Action": ["logs:CreateLogStream", "logs:PutLogEvents"]
    },
    {
      "Effect": "Allow",
      "Resource": ["${s3_arn}/*"],
      "Action": [
        "s3:GetObject",
        "s3:PutObjectAcl",
        "s3:PutObject",
        "s3:DeleteObject",
        "s3:DeleteObjectVersion"
      ]
    }
  ]
}
